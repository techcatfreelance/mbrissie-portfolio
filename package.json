{
  "name": "michael-brissie-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-tailwind && npm run minify-tailwind && npm run build-eleventy",
    "build-eleventy": "cross-env ELEVENTY_ENV=production NODE_ENV=production npx @11ty/eleventy",
    "build-tailwind": "cross-env NODE_ENV=production npx postcss styles/tailwind.css -o _site/style.css",
    "minify-tailwind": "cleancss -o _site/style.css _site/style.css",
    "serve": "cross-env ELEVENTY_ENV=development npx @11ty/eleventy --serve & npx postcss styles/tailwind.css --o _tmp/style.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.9.0",
    "@sherby/eleventy-plugin-files-minifier": "^1.1.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "autoprefixer": "^10.2.6",
    "clean-css-cli": "^5.4.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.4"
  }
}
