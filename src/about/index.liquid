---
title: About
layout: main
---

<div class="flex flex-col max-h-screen" style="height: calc(var(--vh, 1vh) * 100);"> 
  <div class="flex-auto overflow-y-scroll pb-8">
    {% include ../_layouts/header %}

    <main class="flex flex-col items-center">
      <div class="
        flex flex-col gap-2 items-center
        max-w-screen-lg
        w-11/12
      ">      
        <!-- image -->
        <div class="bg-black w-full border-4 border-black">
          <img 
            class="w-full"
            src="{{ settings.aboutImage }}"
          ></img>
        </div>

        <!-- about -->
        <div class="
          text-primary
          bg-black
          flex flex-col
          p-4
          w-full
        ">
          <h6 class="self-center text-md font-thin normal-case">{{ settings.aboutContent }}</h6>
        </div>

        <div class="text-gray-400 text-3xl flex gap-4 p-4">
          {% for item in settings.socials -%}
          <a href="{{ item.url }}">
            <i class="{{ item.icon }} hover:text-primary"></i>
          </a>
          {% endfor %}
        </div>

      </div>
    </main>
  </div>
</div>